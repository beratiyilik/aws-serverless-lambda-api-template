{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "es2022"
    ],
    "target": "es2022",
    "outDir": "lib",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ],
    "types": [
      "node",
      "jest",
      "express"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}